<!-- Header & Tagline -->
<div class="container-fluid">
  <div class="header">
    <h2>GivaLittle</h2>
  	<p id="tagline">Give back what you can, when you can, one small donation at a time. </p> 
  </div> 

<hr>

<% @charities.each do |charity| %>
<div class="well row animated bounceInUp" id="charity-div0">
 <div class="col-xs-8">
   <%= charity.charity_name %>
   <%= charity.mission %>
 </div>
 <div class="dropdown btn-sm col-xs-4">
<button class="btn btn-warning dropdown-toggle" id="btn-donate" type="button" data-toggle="dropdown">Donate
<span class="caret"></span></button>
<ul class="dropdown-menu animated bounceInRight">
  <li><a href="/payment/index" class="btn" >$5</a></li>
  <li><a href="/payment/index" class="btn">$10</a></li>
  <li><a href="/payment/index" class="btn">$15</a></li>
</ul>
</div>
</div>
<% end %>
