
<!-- Header & Tagline -->
<div class="container">
  <div class="header">
    <h3>GivaLittle</h2>
    <p id="tagline">Give back what you can, when you can, one small donation at a time. </p> 
  </div> 
  <!-- legend -->
  <div class="row">
    <div class="col-xs-6" id="legend"><b>Charities</b></div>
    <div class="col-xs-6" id="legend"><b>Donation Amount</b></div>
  </div>


<% @charities.each do |charity|%>

<div class="well row">
  <div class="col-xs-8">
    <h2><%= charity.first_name %></h2>
    <h4><%= charity.description %></h4>
  </div>
  <div class="btn btn-success btn-sm col-xs-4" id="d1"> DONATE
    <div class="btn-toolbar">
      <div class="btn-group-primary" hidden id="d2">
          <button class="btn-btn-primary"> $5</button> 
          <button class="btn-btn-primary"> $10</button> 
          <button class="btn-btn-primary"> $15</button>
      </div>
    </div>
  </div>
</div>

<% end %>

</div><!-- close containter -->