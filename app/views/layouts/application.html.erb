<!DOCTYPE html>
<html>
<head>
  <title>Givalittle</title>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  	<!--   <meta name="viewport" content="width=device-width, initial-scale=1"-->
  <meta name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no' />

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

<link rel="icon" type="image/png" sizes="25x25" href="<%= asset_path"logo.png"  %>">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'https://www.simplify.com/commerce/v1/simplify.js' %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default" id="nav">
    <div class="container-fluid">
      <div class="navbar-header">
        <header>
          <a class="navbar-brand" id="brand" href="/">Givalittle</a>
        </header>
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav pull-left" id="auth">
             <li> <%= link_to "Home", root_path %></li>
          </ul>            
          <ul class="nav navbar-nav navbar-right">
            <!-- log in / log out -->
            <% if logged_in? %>
              <%= link_to "Logout", logout_path, class: "btn navbar-btn navbar-right btn-primary" %> 
              <%= link_to "Profile", profile_path(current_user), class: "btn navbar-btn navbar-right btn-primary" %>
            <% else %>
              <%= link_to "Login", login_path, class: "btn navbar-btn navbar-right btn-primary" %>
              <%= link_to "Sign Up", signup_path, class: "btn navbar-btn navbar-right btn-primary" %>
            <% end %>
          </ul>
        </div>
      </div>
<!-- /.navbar-collapse -->
    <!-- </div>/.container-fluid -->
 </nav>

	


<%= yield %>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

</body>
</html>
